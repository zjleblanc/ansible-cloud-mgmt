#cloud-config

disable_ec2_metadata: 'true'
fqdn: '{{ vmware_guest_name }}'
hostname: '{{ vmware_guest_name }}'

users:
- name: 'ansible'
  groups: [wheel, ansible]
  shell: /bin/bash
  sudo: ALL=(ALL) NOPASSWD:ALL
{% if (vmware_public_key | default('') | length) %}
  ssh_authorized_keys:
    - {{ vmware_public_key }}
{% endif %}